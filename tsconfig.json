{
  "compilerOptions": {
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "tests/**/*", "vite.config.ts"]
}
